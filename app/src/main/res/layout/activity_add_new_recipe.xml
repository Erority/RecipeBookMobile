<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.add_new_recipe.AddNewRecipeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_marginStart="20dp"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новый рецепт"
            android:textSize="34dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/inter_medium"/>

        <Button
            android:id="@+id/btnAddRecipe"
            android:text="добавить"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/font_color"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"/>

        <TableLayout
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <FrameLayout android:layout_gravity="center">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_pick_photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <ImageButton

                    android:id="@+id/btnUserImage"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/take_a_photo_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        />

                </FrameLayout>
                <LinearLayout
                    android:layout_marginStart="26dp"
                    android:orientation="vertical"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:layout_gravity="center_horizontal"
                        android:text="Название рецепта"
                        android:textColor="@color/main_color"
                        android:textSize="17dp" />


                    <EditText
                        android:lines="2"
                        android:id="@+id/enterRecipeName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/custom_inpute"
                        android:textSize="17dp"
                        android:textColor="@color/font_color"
                        android:fontFamily="@font/inter_medium"
                        android:ems="10"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Минут"
                    android:textColor="@color/main_color"
                    android:textSize="17dp" />


                <EditText
                    android:id="@+id/enterMinutes"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_inpute"
                    android:textSize="17dp"
                    android:textColor="@color/font_color"
                    android:fontFamily="@font/inter_medium"
                    android:ems="10"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TextView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="Порций"
                        android:textColor="@color/main_color"
                        android:textSize="17dp" />


                    <EditText
                        android:id="@+id/enterPortions"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/custom_inpute"
                        android:textSize="17dp"
                        android:textColor="@color/font_color"
                        android:fontFamily="@font/inter_medium"
                        android:ems="10"
                        android:inputType="phone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Рецепт"
                android:textColor="@color/main_color"
                android:textSize="17dp" />


            <EditText
                android:layout_gravity="top"
                android:id="@+id/enterRecipeContent"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_inpute"
                android:textSize="17dp"
                android:textColor="@color/font_color"
                android:fontFamily="@font/inter_medium"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>